# ==================================
# CONFIGURACIÓN DEL PROYECTO - EXAMPLE
# ==================================
# Copia este archivo como .env y completa con tus datos reales

# Django
DEBUG=True
SECRET_KEY=django-insecure-your-secret-key-here

# ==================================
# CONFIGURACIÓN IMAP
# ==================================

# Gmail Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_EMAIL=tu-email@gmail.com
IMAP_PASSWORD=tu-app-password-de-16-caracteres
IMAP_USE_SSL=True
IMAP_FOLDER_INBOX=INBOX
IMAP_FOLDER_PROCESSED=Processed

# Configuración de procesamiento
IMAP_BATCH_SIZE=50
IMAP_PROCESS_INTERVAL=60  # 1 minuto en segundos (más rápido)

# ==================================
# CONFIGURACIÓN CELERY & REDIS (OPCIONAL - NO REQUERIDO)
# ==================================

# Redis Configuration (Celery Broker) - Solo si usas Celery
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================================
# CONFIGURACIÓN DE LOGS
# ==================================

LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# ==================================
# CONFIGURACIÓN TELEGRAM (FUTURO)
# ==================================

# Telegram Bot Configuration (para futuras notificaciones)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==================================
# CONFIGURACIÓN DE ALERTAS
# ==================================

# Configuración de prioridades automáticas
HIGH_PRIORITY_KEYWORDS=venta,urgente,importante,alerta,crítico,error
MEDIUM_PRIORITY_KEYWORDS=pedido,orden,consulta,información
LOW_PRIORITY_KEYWORDS=newsletter,promoción,marketing,notificación

# ==================================
# CONFIGURACIÓN TELEGRAM
# ==================================
# Token del bot (obtenido de @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCDEF1234567890abcdef1234567890ABC

# URL del webhook (opcional, para producción)
# Debe ser HTTPS y accesible desde internet
TELEGRAM_WEBHOOK_URL=https://tudominio.com/telegram/webhook/

# Token secreto del webhook (opcional, recomendado)
TELEGRAM_WEBHOOK_SECRET=mi-token-secreto-muy-seguro

# Chat ID por defecto para alertas
# Puedes obtenerlo enviando un mensaje a tu bot y consultando:
# https://api.telegram.org/bot<TU_TOKEN>/getUpdates
TELEGRAM_DEFAULT_CHAT_ID=123456789

# ==================================
# INSTRUCCIONES DE CONFIGURACIÓN
# ==================================

# PARA EMAILS:
# 1. Copia este archivo como .env
# 2. Ve a https://myaccount.google.com/security
# 3. Activa verificación en 2 pasos
# 4. Crea "Contraseña de aplicación" para Gmail
# 5. Completa IMAP_EMAIL con tu email
# 6. Completa IMAP_PASSWORD con la contraseña de aplicación (16 caracteres)

# PARA TELEGRAM:
# 1. Habla con @BotFather en Telegram
# 2. Crea un nuevo bot con /newbot
# 3. Copia el token y pégalo en TELEGRAM_BOT_TOKEN
# 4. Envía un mensaje a tu bot
# 5. Ve a: https://api.telegram.org/bot<TU_TOKEN>/getUpdates
# 6. Busca el chat.id y pégalo en TELEGRAM_DEFAULT_CHAT_ID

# 7. Guarda el archivo y ejecuta: start_auto_emails.bat
